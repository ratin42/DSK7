{
    "typeRoots": ["./typings"],
    "compileOnSave": true,
    "exclude": ["prettier.config.js"], // avoid error about prettier.config.js
    "compilerOptions": {
        "types": [
            "vite/client" // if using vite avoid error on "class"
        ],
        "paths": {
            "@/*": ["./src/*"] // alias for ./src/
        },
        "allowJs": false, // avoid error about prettier.config.js
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "noUnusedParameters": false
    }
}
